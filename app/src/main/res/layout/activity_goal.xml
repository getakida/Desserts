<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="목표 달성"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/goalEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="목표를 입력하세요" />

    <ProgressBar
        android:id="@+id/goalProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:max="100"
        android:progress="0" />

    <Button
        android:id="@+id/achieveButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="달성1" />

    <Button
        android:id="@+id/achieveButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="달성2" />

    <Button
        android:id="@+id/achieveButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="달성3" />

    <Button
        android:id="@+id/achieveButton4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="달성4" />

    <Button
        android:id="@+id/achieveButton5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="달성5" />
</LinearLayout>
